# Dockerfile for SPOE mirror agent
# Simple Python-based SPOE agent for request mirroring

FROM python:3.12-slim

# Install netcat for health checks
RUN apt-get update && apt-get install -y \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Copy SPOE mirror script
COPY spoa_mirror.py /usr/local/bin/spoa-mirror
RUN chmod +x /usr/local/bin/spoa-mirror

# Create non-root user
RUN useradd -r -s /bin/false spoa

USER spoa

# Expose SPOE port
EXPOSE 12345

# Default command: Listen on port 12345, mirror to shadow-backend
ENTRYPOINT ["python3", "/usr/local/bin/spoa-mirror"]
CMD ["-p", "12345", "-u", "http://backend-shadow:8080"]
